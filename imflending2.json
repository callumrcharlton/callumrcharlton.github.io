{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "IMF Lending Outstanding",
      "subtitle":"Credit outstanding as a proportion of GDP, SDRs (Billions), Source: IMF and World Bank",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "black"},
  
  "data":{"url": "https://raw.githubusercontent.com/callumrcharlton/callumrcharlton.github.io/main/data_IMF_creditOutstanding2.csv"},

  "transform": [
    {"calculate": "datum.Totals/1000000000", "as": "billions"}
  ],
  
  "height": 300,
  "width": 300,

  "mark": {
    "type": "bar",
    "color": "rgb(0,47,167"},

"encoding": {
     "x": {
       "field": "Year",
       "type": "temporal",
       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45}},

      "y": {
        "field": "Totals/GDP",
        "type": "quantitative",
        "title": "",
        "axis": {"grid": false}}
}
}