{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

    "data": {
       "url": "https://raw.githubusercontent.com/callumrcharlton/callumrcharlton.github.io/main/data_ONS_BEAO.json",
       "format": {
           "type":"json",
           "property": "years"}},


    "title": {
        "text": "Redundancy Levels UK",
        "subtitle": "ILO redundancy level (thousands), UK, 1995-2022 Souce: ONS",
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},

    "width":300,
    "height":300,

    "mark":{
        "type": "line",
        "color":"#808000",
        "strokeWidth":2,
        "opacity":1},
 

    "encoding": {
      "x": {
          "field": "year",
          "type": "temporal",
          "title":"Year"
          },
          
      "y": {
          "field": "value",
          "type": "quantitative",
          "title": "Redundancy Level"}
    },
    "resolve": {
      "scale": {
        "x": "independent"
    }
  }
}